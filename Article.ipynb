import pandas as pd
import seaborn as sns
import matplotlib.pyplot as plt
from sklearn.decomposition import PCA
from sklearn.preprocessing import StandardScaler

# Load the data from the Excel file (replace with actual file path if necessary)
file_path = 'ubica_geo_python.xlsx'  # Replace with your actual file path
df = pd.read_excel(file_path)

# Define the columns for analysis
columns_to_analyze = ['niv_ed', 's_salud', 'pobreza', 'pobreza_e', 'pobreza_m', 'LucesNocturnas', 'NDVI', 'NDWI', 'SAVI']

# Get unique base locations by extracting the location part before the underscore
df['base_location'] = df['ubica_geo'].str.split('_').str[0]
unique_locations = df['base_location'].unique()

# Loop through each unique base location
for location in unique_locations:
    # Filter data for the current location, combining all years
    df_location = df[df['base_location'] == location]

    # Check if there is sufficient data for analysis
    num_records = df_location.shape[0]
    print(f"\n{location} has {num_records} record(s).")

    if num_records < 2:
        print(f"Insufficient data for {location}. Skipping...")
        continue

    print(f"\nAnalysis for {location} (combining all years):")

    # Select relevant columns for analysis
    df_selected = df_location[columns_to_analyze]

    # Calculate the correlation matrix
    correlation_matrix = df_selected.corr()

    # Plot the correlation matrix as a heatmap
    plt.figure(figsize=(10, 8))
    sns.heatmap(correlation_matrix, annot=True, cmap='coolwarm', fmt=".2f", square=True, cbar_kws={"shrink": .8})
    plt.title(f"Correlation Matrix Heatmap for {location} (All Years Combined)")
    plt.show()

    # Standardize the data before PCA
    scaler = StandardScaler()
    df_scaled = scaler.fit_transform(df_selected)

    # Perform PCA
    pca = PCA()
    pca.fit(df_scaled)

    # Get PCA components and explained variance
    pca_components = pca.components_
    explained_variance = pca.explained_variance_ratio_

    # Prepare PCA results in DataFrame for easier interpretation
    pca_df = pd.DataFrame(pca_components, columns=columns_to_analyze, index=[f'PC{i+1}' for i in range(len(pca_components))])
    explained_variance_df = pd.DataFrame({'Explained Variance Ratio': explained_variance}, index=[f'PC{i+1}' for i in range(len(explained_variance))])

    # Display the PCA components and explained variance
    print("PCA Components:")
    print(pca_df)
    print("\nExplained Variance Ratio:")
    print(explained_variance_df)
